<?xml version="1.0" encoding="utf-8"?>
<DataForm xmlns="http://www.enova.pl/schema/form.xsd" Priority="1000">
  <Page CaptionHtml="OnlineStoreWithErp/Grupy" DataContext="{new GrupyConfigPage}">

    <Grid Width="*" Height="10" EditValue="{Grupy}" OrderBy="OrderValue" IsToolbarVisible="true" NewButton="Visible" EditButton="Visible" RemoveButton="Visible">
